<%= form_for [@facility, @patient] do |f| %>
  <% if @patient.errors.any? %>
    <% @patient.errors.full_messages.each do |message| %>
      <%= message %>
      <br>
    <% end %>
  <% end %>
  
  <%= f.label :first_name, "First Name" %>
  <%= f.text_field :first_name %> <br>
  <%= f.label :last_name, "Last Name" %>
  <%= f.text_field :last_name %> <br>
  
  <%= f.label :dob, "Date of Birth" %>
  <%= f.date_select :dob, start_year: 1920, order:[:month, :day, :year] %> <br>

  <%= f.label :symptoms, "Symptoms" %>
  <%= f.text_field :symptoms %> <br>
  <%= f.radio_button :gender, "Male", :checked => true %> 
  <%= label :gender_male, "Male" %>
  <%= f.radio_button :gender, "Female" %>
  <%= label :gender_female, "Female" %> <br>
  <%= f.select :blood_type, options_for_select(Patient::BT_OPTIONS, f.object.blood_type), include_blank: "--- Select ---" %> <br>
  <%= f.submit %>

<% end %>