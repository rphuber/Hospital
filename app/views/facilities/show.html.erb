<h2><%= @facility.name %></h2>
<%= link_to 'Back to List', facilities_path %>

<br>

<h3>Patient List</h3>

<ul>
  <% @patients.each do |patient| %>
      <li>
        <p>
          <%= patient.first_name %>
          <%= patient.last_name %>
        </p>

        <%= link_to "View Details", patient_path(patient) %>
        <%= link_to "Edit", edit_patient_path(patient) %>

        <%= link_to "Delete", patient_path(patient), method: :delete %>


        <br>
      </li>
  <% end %>

</ul>


<%= link_to 'Add Patient', new_facility_patient_path(@facility) %>

<hr>
