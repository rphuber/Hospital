.row
  .small-9.small-offset-3.columns
    %h2
      = @facility.name
    = link_to 'Back to List', facilities_path, class:"button small"

    %br

    %h3 Patient List

    %ul.list-group
      - @patients.each do |patient| 
        %li.list-group-item
          = link_to "#{patient.first_name} #{patient.last_name}", patient_path(patient) 
          = link_to "Edit", edit_patient_path(patient), class: "button tiny right"
          = link_to "Delete", patient_path(patient), method: :delete, class: "button tiny alert right" 




    = link_to 'Add Patient', new_facility_patient_path(@facility), class: "button small"

    %hr
